#-- Shortcuts
#-----------------------------------------------

#-- System

# split in horizontal orientation
bindsym $mod+n split h

# split in vertical orientation
bindsym $mod+b split v

bindsym Control+Mod1+Right workspace next

bindsym Control+Mod1+Left workspace prev

bindsym Mod1+w kill

bindsym $mod+w kill

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+Shift+s layout stacking
bindsym $mod+Shift+w layout tabbed
bindsym $mod+Shift+e layout toggle split

# logout i3
bindsym $mod+F12 exec "killall conky && i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit' -B 'No' 'myconky && killall i3-nagbar'"
bindsym $mod+F9 exec "killall conky"
# bindsym $mod+F12 exec "i3-nagbar"

# toggle compositor mode
bindsym $mod+F11 exec "toggleVideo"

# runner
bindsym $mod+r exec --no-startup-id rofi -show run
# bindsym $mod+r exec --no-startup-id dmenu_run
# bindsym $mod+r exec --no-startup-id gmrun

bindsym $mod+v mode "resize"

bindsym XF86AudioRaiseVolume exec vol up -i 20 -m Master && $refresh_i3status
bindsym XF86AudioLowerVolume exec vol down -i 20 -m Master && $refresh_i3status

# shutdown
bindsym $mod+End exec systemctl poweroff

# reload config
bindsym $mod+o reload

# toggle windows
bindsym Mod1+Tab exec --no-startup-id rofi -show window

# move windows
mode "mode-move-window" {
	bindsym 1 move container to workspace number $ws1 ; mode "default"
	bindsym 2 move container to workspace number $ws2 ; mode "default"
	bindsym 3 move container to workspace number $ws3 ; mode "default"
	bindsym 4 move container to workspace number $ws4 ; mode "default"
	bindsym 5 move container to workspace number $ws5 ; mode "default"
	bindsym 6 move container to workspace number $ws6 ; mode "default"
	bindsym 7 move container to workspace number $ws7 ; mode "default"
	bindsym 8 move container to workspace number $ws8 ; mode "default"
	bindsym 9 move container to workspace number $ws9 ; mode "default"
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+d mode "default"
}
bindsym $mod+d mode "mode-move-window"

# go to windows
mode "mode-go-window" {
	bindsym 1 workspace number $ws1 ; mode "default"
	bindsym 2 workspace number $ws2 ; mode "default"
	bindsym 3 workspace number $ws3 ; mode "default"
	bindsym 4 workspace number $ws4 ; mode "default"
	bindsym 5 workspace number $ws5 ; mode "default"
	bindsym 6 workspace number $ws6 ; mode "default"
	bindsym 7 workspace number $ws7 ; mode "default"
	bindsym 8 workspace number $ws8 ; mode "default"
	bindsym 9 workspace number $ws9 ; mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+g mode "default"
}
bindsym $mod+g mode "mode-go-window"


