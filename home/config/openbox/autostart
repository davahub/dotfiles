#--------------------------------------------------------
#-- STARTUP PROGRAMS 
#--------------------------------------------------------

picom -b

sleep 0.1s
guake &

sleep 0.1s
conky &

wallpaper='w.jpg'

feh --bg-scale /home/dava/.3installed/wallpaper/$wallpaper &

$MYCONFIG_DIR/home/setlayout 0 3 2 0 &

volumeicon &

numlockx &

opensnap -d &

xset -dpms; xset s off; xset -b &

tint2 &

sleep 1s
xscreensaver -no-splash &

mydmenu
sleep 1s
killall dmenu


